<main class="main">
  <div class="content">
    <section>
      <div class="container mt-4">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <h2 class="text-center">Add Category</h2>
            <form
              action="/admin/addCategory"
              method="POST"
            >

              <label for="">Category</label>
              <input type="text" name="category" id="categoryName" class="form-control" value="" />

              <button type="submit" class="btn btn-success mt-4">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </section>

   


    <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Category Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Category</th>
                                            
                                            <th scope="col">Edit-Category</th>
                                            <th scope="col">Delete-Category</th>
                                            {{!-- <th scope="col">Block/Unblock User</th>
                                            <th scope="col">Status</th> --}}
                                        </tr>
                                    </thead> 

                                    <tbody>
                                     {{#each categoryData}}
                                        <tr>
                                            <th scope="row">{{inc @index}}</th>
                                            <td>{{this.category}}</td>
                                            {{!-- <td>{{this.subCategory}}</td> --}}
                                            <td><a href="" onclick="editCategory('{{this._id}}')"><i class="gd-pencil icon-text"></i></a></td>
                                            <td><a href="" onclick="deleteCategory('{{this._id}}')"><i class="gd-trash icon-text"></i></a> </td>
                                            {{!-- <td><a href="/admin/edit/{{this._id}}"><i class="bi bi-pencil-square"></i></a></td>
                                            {{#if this.block}}
                                          
                                            <td><button class="btn btn-primary">blocked</button></td>
                                            {{else}}
                                              <td><button class="btn btn-success">active</button></td>
                                            {{/if}} --}}
                                        </tr>
                                   {{/each}}
                                 </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


  </div>
</main>



<script>
  
function deleteCategory(categoryId){
   
   $.ajax({
     url:'/admin/deleteCategory',
     data:{
       categoryId:categoryId
     },
     method:'post',
     success:(response)=>{
       if(response.categoryDeleted){
         alert('category deleted')
         location.reload();
       }else{
         alert('failed to delete category')
       }
     }

   })
 }


 

</script>