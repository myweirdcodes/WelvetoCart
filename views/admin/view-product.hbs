

<main class="main">
    

    <div class="content">
        

        <section>
    <div class="container mt-5">
        
<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Brand Name</th>
      <th scope="col">Category</th>
      <th scope="col">Stock</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
        {{#each productData}}
      <th scope="row">{{inc @index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.brandName}}</td>
      <td>{{this.category.category}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px;height: 50px " src="/product_uploads/{{this.image.[0]}}" alt=""></td>
      <td>
        <a href="/admin/updateProduct/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/deleteProduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

</section>



     
    </div>
</main>

